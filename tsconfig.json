{
  "compilerOptions": {
    // Environment setup & latest features
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "module": "Preserve",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,

    // Bundler mode
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    // Best practices
    "strict": false,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": false,
    "noUncheckedIndexedAccess": false,
    "noImplicitOverride": false,

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@editor/*": ["./enhanced-code-editor/*"]
    },

    // Some stricter flags (disabled by default)
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false,
    "types": ["bun-types"]
  },

  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "enhanced-code-editor/index.tsx",
    "enhanced-code-editor/example-plugin.ts",
    "enhanced-code-editor/editor-styles.css"
  ],

  "exclude": [
    "dist",
    "node_modules",
    "enhanced-code-editor/DEMO.tsx",
    "enhanced-code-editor/**/*.md"
  ]
}
